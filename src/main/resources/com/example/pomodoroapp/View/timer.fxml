<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="231.0" prefWidth="228.0" spacing="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pomodoroapp.Controller.TimerController">
    <Label text="Pomodoro Timer" />
    <Label fx:id="timerLabel" styleClass="label-timer" text="25:00" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="startPauseButton" onAction="#startPauseTimer" text="Start" />
        <Button onAction="#resetTimer" text="Reset" />
    </HBox>
      <Button fx:id="loginButton" onAction="#handleLoginButtonAction" text="Sign In" />
   <HBox alignment="CENTER" spacing="10" />
</VBox>
